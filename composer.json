        "ext-simplexml": "*",
        "fisharebest/ext-calendar": "^2.5",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "php-cs-fixer/phpunit-constraint-xmlmatchesxsd": "^1.2"
    }
}
