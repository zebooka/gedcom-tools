{
    "name": "zebooka/gedcom-tools",
    "description": "Tools for making some actions on GEDCOM files.",
    "authors": [
        {
            "name": "Anton Bondar",
            "email": "zebooka@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Zebooka\\": "src/",
            "Test\\Zebooka\\": "tests/unit/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "require": {
        "php": "^7.3|^8.0",
